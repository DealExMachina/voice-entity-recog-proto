{
  "name": "sales-buddy",
  "version": "1.0.0",
  "description": "AI-powered sales conversation analysis with entity extraction and DuckDB storage",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "npm run build:ts && npm run build:assets",
    "build:ts": "tsc",
    "build:assets": "npm run build:css && npm run build:js",
    "build:css": "postcss public/styles.css -o public/dist/styles.min.css",
    "build:js": "terser public/app.js -o public/dist/app.min.js --compress --mangle",
    "build:production": "NODE_ENV=production npm run build",
    "postbuild": "npm run optimize:assets",
    "optimize:assets": "mkdir -p public/dist",
    "start": "node dist/index.js",
    "dev": "concurrently \"tsc --watch\" \"nodemon dist/index.js\" \"npm run watch:css\"",
    "watch:css": "postcss public/styles.css -o public/dist/styles.css --watch",
    "dev:ts": "tsx watch src/index.ts",
    "test": "node --import tsx --require dotenv/config tests/test-basic.ts",
    "test:watch": "node --loader tsx --watch tests/test-basic.ts",
    "health": "curl -f http://localhost:3000/api/health || exit 1",
    "clean": "rm -rf dist && rm -rf public/dist && rm -rf node_modules package-lock.json && npm install",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "sales",
    "ai",
    "voice",
    "entity-extraction",
    "mcp",
    "duckdb",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@mistralai/mistralai": "^1.7.2",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "duckdb": "^0.10.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "multer": "^1.4.5-lts.1",
    "openai": "^4.20.0",
    "typescript": "^5.8.3",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.11",
    "@tailwindcss/typography": "^0.5.16",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/multer": "^1.4.13",
    "@types/node": "^20.19.1",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "autoprefixer": "^10.4.21",
    "clean-css-cli": "^5.6.3",
    "concurrently": "^8.2.2",
    "cssnano": "^7.0.7",
    "eslint": "^8.57.1",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "prettier": "^3.6.1",
    "tailwindcss": "^4.1.11",
    "terser": "^5.43.1",
    "tsx": "^4.20.3"
  }
}
