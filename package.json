{
  "name": "sales-buddy",
  "version": "1.0.0",
  "description": "AI-powered sales conversation analysis with entity extraction and DuckDB storage",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "concurrently \"tsc --watch\" \"nodemon dist/index.js\"",
    "dev:ts": "tsx watch src/index.ts",
    "test": "node --import tsx --require dotenv/config tests/test-basic.ts",
    "test:watch": "node --loader tsx --watch tests/test-basic.ts",
    "health": "curl -f http://localhost:3000/api/health || exit 1",
    "clean": "rm -rf dist && rm -rf node_modules package-lock.json && npm install",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "sales",
    "ai",
    "voice",
    "entity-extraction",
    "mcp",
    "duckdb",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@mistralai/mistralai": "^1.7.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "duckdb": "^0.10.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "multer": "^1.4.5-lts.1",
    "openai": "^4.20.0",
    "typescript": "^5.8.3",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/multer": "^1.4.13",
    "@types/node": "^20.19.1",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.1",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.1",
    "tsx": "^4.20.3"
  }
}
