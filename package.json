{
  "name": "mastra-voice-entity-extraction",
  "version": "1.0.0",
  "description": "Mastra prototype for entity extraction from voice chat with DuckDB storage via MCP",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "node --watch src/index.js",
    "build": "echo 'No build step required'",
    "test": "node tests/test-basic.js",
    "test:watch": "node --watch tests/test-basic.js",
    "health": "curl -f http://localhost:3000/api/health || exit 1",
    "setup": "./scripts/setup-keys.sh",
    "config": "./scripts/check-config.sh",
    "deploy": "./scripts/deploy-koyeb.sh",
    "deploy:check": "echo 'Deploy via GitHub Actions or Koyeb CLI'",
    "clean": "rm -rf node_modules package-lock.json && npm install",
    "logs": "echo 'Use: docker logs <container> or check deployment platform'"
  },
  "keywords": [
    "mastra",
    "voice",
    "entity-extraction",
    "mcp",
    "duckdb"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@mistralai/mistralai": "^1.7.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "duckdb": "^0.10.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "multer": "^1.4.5-lts.1",
    "openai": "^4.20.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}
